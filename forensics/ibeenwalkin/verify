#!/usr/bin/exec-suid -- /usr/bin/python3.12 -I
import sys

def prGreen(s): print("\033[92m {}\033[00m".format(s))
def prRed(s): print("\033[91m {}\033[00m".format(s))

def print_flag():
    try:
        with open("/flag", "r") as f:
            print(f.read())
    except FileNotFoundError:
        print("Error: Flag file not found.")

def main():
    with open('/challenge/ans.txt', 'r') as fObj:
        ANS = [x.strip() for x in fObj.readlines()]

    usr = input("In the interesting file, who is the quote attributed to?  ").lower()
    if usr not in ANS:
        prRed("That is not correct. Make sure to check your spelling.")
        sys.exit(0)

    prGreen("That's correct! Congratulations!")
    print_flag()


if __name__ == "__main__":
    main()
